@model GruppG.Models.db.Program

@{
    ViewBag.Title = "Ta bort";
}

<h3>Är du säker på att du vill ta bort den här puffen?</h3>


    <hr />
    <div class="form-group">

        <div>
            <strong>Program</strong>
            @Html.DisplayFor(model => model.Titel)
        </div>

        <div>
            <strong>Kanal</strong>
            @Html.DisplayFor(model => model.Chanel1.Name)
        </div>

        <div>
            <strong>Kategori</strong>
            @Html.DisplayFor(model => model.Category1.Name)
        </div>

        <div>
            <strong>Datum</strong>
            @Html.DisplayFor(model => model.Programstart)
        </div>

        <div>
            <strong>Starttid</strong>
            @Html.DisplayFor(model => model.Programstart.Value.TimeOfDay)
        </div>

        <div>
            <strong>Sluttid</strong>
            @Html.DisplayFor(model => model.Endtime.Value.TimeOfDay)
        </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Ta bort puffen" class="btn btn-default" /> 
            <br />
        </div>
    }
        <br />
        <br />

 @Html.ActionLink("Tillbaka", "Index")
</div>
