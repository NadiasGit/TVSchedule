<div class ="date">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
            <h4>Filtrera på datum</h4>
            @*<div class="list-group">*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        
                        @Html.DropDownList("date", new SelectList(Model.Dates, "date".ToString(), "date"), "Idag", new { onchange = "form.submit();" })
                        @Html.DropDownList("id", new SelectList(Model.CategoryListVM, "Id", "Name", "id"), "Alla kategorier", new { onchange = "form.submit();" })
                       
                   @*</div>*@
                </div>


            </div>
    }
</div>



<div class="row">

            @if (Model.ChannelListVM != null)
            {
                foreach (var item in Model.ChannelListVM)

                {
                    <div class="col-md-4">
                        <h2> @item.Name </h2>
                        
                        <table class="table">
                            <tr>
                                <th> Program </th>
                                <th> Tid </th>
                            </tr>
                    
                            @if (Model.ProgramListVM.Any())
                            {
                                foreach (var i in Model.ProgramListVM.Where(p => p.Chanel == item.Id))
                                {
                                    
                                    <tr>
                                        <td>@i.Titel</td>
                                        <td>@i.Programstart</td>
                                        <td>@Html.ActionLink("Mer information", "ProgramDetails", new { @id = i.Id }, null)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                @ViewBag.Message
                            }
                        </table>
                        </div>
                }
            }

</div>








