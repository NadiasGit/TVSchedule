@model IEnumerable<GruppG.Models.db.Program>

@{
    ViewBag.Title = "TV4";
}

<table class="table">
    <tr>
        <th>
            <p>Program</p>
        </th>

        @*<th>
            <p>Kanal</p>
        </th>*@

        <th>
            <p>Datum</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>

            @*<td>
                @Html.DisplayFor(modelItem => item.Chanel)
            </td>*@

            <td>
                @item.Starttime.Value.ToShortDateString()
            </td>
          
            <td>

                <!--Visa ett pop-up-fönster-->
                <a href="#descriptionModal" data-toggle="modal">Mer info</a>
                <!--<button class="btn btn-primary btn-sm" data-target="#descriptionModal" data-toggle="modal">Mer info</button>-->
                <div class="modal" id="descriptionModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                @{
                                    Html.RenderAction("Details", new { id = item.Id });
                                } 
                            </div>
                            @*<div class="modal-footer">
                                <button class="btn btn-primary" data-dissmiss="modal">Stäng</button>
                            </div>*@
                        </div>
                    </div>
                </div> 
            </td>
        </tr>
    }

</table>
