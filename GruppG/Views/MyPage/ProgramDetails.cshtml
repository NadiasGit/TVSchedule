@model GruppG.Models.db.Program

@{
    ViewBag.Title = "ProgramDetails";
}

<h3>Programinformation</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <strong>Program</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titel)
        </dd>

        <dt>
            <strong>Om programmet</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <strong>Datum & tid</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Programstart.Value.TimeOfDay)

        </dd>
        <dd>
            <strong>-</strong>
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Endtime)
        </dd>

        <dt>
            Rekommenderat
        </dt>

        <dd>
            @ViewBag.Message
        </dd>

        <dt>
            <strong>Kategori</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category1.Name)
        </dd>

        <dt>
            <strong>Kanal</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Chanel1.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Tillbaka", "Index")
</p>


