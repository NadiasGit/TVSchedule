@model GruppG.Models.ViewModels.ProgramChannelVM

@{
    ViewBag.Title = "Mina favoritkanaler";
}
@Html.ActionLink("Tillbaka", "Index", "MyPage")
<div class="jumbotron">
    <div class="list-group-item">
        <h2>
            Dina favoritkanaler
            @Html.DisplayFor(model => model.Person.FirstName)
            @Html.DisplayFor(model => model.Person.LastName) :
        </h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table class="table">
                @foreach (var item in Model.FavoriteChannelsVM)
                {
                    <tr>
                        <td>
                            <h2> @item.Chanel1.Name</h2>
                        </td>
                        <td>
                            @Html.ActionLink("Ta bort", "Delete", new { fcid = item.Id, id = item.Person })
                        </td>
                    </tr>
                }
            </table>
        }
            </div>
            </div>
@*----Alertmessage - fav-channel already exists----*@

        @if (TempData["message"] != null)
        {

            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert">&times;</a>
                <strong> OBS:</strong> @TempData["message"]
            </div>
        }
@*---Alert message End----*@

<div class="list-group-item">
    <h3>Lägg till som favoritkanal:</h3>
    <table class="table">
        @foreach (var item in Model.ChannelListVM)
        {
            <tr>
                <td>
                    <h4> @item.Name </h4>
                </td>
                <td>
                    @Html.ActionLink("Lägg till", "Add", new { pId = Model.Person.Id, cId = item.Id })
                </td>
            </tr>
        }
    </table>
    </div>

    @Html.ActionLink("Tillbaka", "Index", "MyPage")




